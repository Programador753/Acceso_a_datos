@model AntonioMVC.Models.Noticia

@{
    ViewData["Title"] = "Crear Noticia";
}

<h1>Añadir nueva Noticia</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Titulo" class="control-label">Título</label>
                <input asp-for="Titulo" class="form-control" required />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Enlace" class="control-label">Enlace</label>
                <input asp-for="Enlace" class="form-control" required />
                <span asp-validation-for="Enlace" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="control-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoriasSeleccionados" class="control-label">Categorías</label>
                <select asp-for="CategoriasSeleccionados" 
                        asp-items="ViewBag.CategoriaIds" 
                        class="form-control" 
                        multiple>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar Noticia" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}