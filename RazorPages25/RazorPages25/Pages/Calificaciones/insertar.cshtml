@page
@model RazorPages25.Pages.Calificaciones.insertarModel
@{
    ViewData["Title"] = "Insertar Calificación";
}

<h2>Insertar Calificación</h2>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["mensaje"]
    </div>
}

<form method="get">
    <div>
        <label for="Convocatoria">Convocatoria:</label>
        <select asp-for="calificacion.convocatoria" class="form-select" onchange="submit()">
            <option value="">-- Seleccione una convocatoria --</option>
            @foreach (var convocatoria in Model.convocatoria)
            {
                <option value="@convocatoria">@convocatoria</option>
            }
        </select>
    </div>
    <div>
        <label for="Curso">Curso:</label>
        <select asp-for="curso" class="form-select" onchange="submit()">
            <option value="">-- Seleccione un curso --</option>
            @foreach (var curso in Model.Cursos)
            {
                <option value="@curso">@curso</option>
            }
        </select>
    </div>
    <div>
        <!--Desplegable de asignaturas del curso seleccionado -->
        <label for="Asignatura">Asignatura:</label>
        <select asp-for="calificacion.asignaturaID" class="form-select" onchange="submit()">
            <option value="">-- Seleccione una asignatura --</option>
            @foreach (var asignatura in Model.asignaturas)
            {
                <option value="@asignatura.CodAsignatura">@asignatura.CodAsignatura - @asignatura.nomAsignatura</option>
            }
        </select>
    </div>
    <div>
        <label for="Alumno">Alumno:</label>
        <select asp-for="calificacion.alumnoID" class="form-select" onchange="submit()">
            <option value="">-- Seleccione un alumno --</option>
            @foreach (var alumno in Model.alumnos)
            {
                <option value="@alumno.Id">@alumno.Nombre</option>
            }
        </select>
    </div>
</form>

<form method="post">
    <input asp-for="calificacion.convocatoria" type="hidden" />
    <input asp-for="curso" type="hidden" />
    <input asp-for="calificacion.asignaturaID" type="hidden" />
    <input asp-for="calificacion.alumnoID" type="hidden" />
    <div>
        <label asp-for="calificacion.nota">Nota:</label>
        <input asp-for="calificacion.nota" class="form-control" size="2" max="10" min="1" />
        <span asp-validation-for="calificacion.nota" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Guardar Calificación</button>
    </div>
</form>

<div class="mt-4">
    @if (Model.CalificacionesMostradas != null && Model.CalificacionesMostradas.Any())
    {
        <h3>Calificaciones Insertadas</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Alumno</th>
                    <th>Nota</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var calificacion in Model.CalificacionesMostradas)
                {
                    var alum = Model.alumnos?.FirstOrDefault(a => a.Id == calificacion.alumnoID);
                    <tr>
                        <td>@(alum?.Nombre ?? "Desconocido")</td>
                        <td>@calificacion.nota</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.calificacion?.asignaturaID != 0 && Model.calificacion?.convocatoria != default(Convocatoria))
    {
        <div class="alert alert-info">
            No hay calificaciones registradas para esta convocatoria y asignatura.
        </div>
    }
</div>