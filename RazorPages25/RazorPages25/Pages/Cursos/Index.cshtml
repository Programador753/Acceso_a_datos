@page
@model RazorPages25.Pages.Cursos.IndexModel
@{
    ViewData["Title"] = "Cursos";
}

<h1 align="center">CURSOS</h1>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <label asp-for="ProfesorSeleccionado" class="form-label">Filtrar por Profesor:</label>
            <select asp-for="ProfesorSeleccionado" asp-items="Model.Profesores" class="form-select">
            </select>
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</form>

@if (Model.Cursos.Any())
{
    @foreach (var curso in Model.Cursos)
    {
        <h3>Curso: @curso </h3>
        <h4>Alumnos:</h4>
        <div style="display: flex; gap: 20px;">
            <div style="flex: 1;">
                @await Component.InvokeAsync("AlumnosDeUnCurso", new { curso = curso })
            </div>
            <div style="flex: 1;">
                @await Component.InvokeAsync("AsignaturasDeUnCurso", new { curso = curso })
            </div>
            <div>
                @await Component.InvokeAsync("ProfesoresDeUnCurso", new { curso = curso })
            </div>
        </div>
        <hr />
    }
}
else
{
    <div class="alert alert-info">
        <p>No hay cursos para el profesor seleccionado.</p>
    </div>
}